{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@yaml/*": ["./yamlTools/*"],
      "@download/*": ["./download/*"],
    },
    "esModuleInterop": true,
    "target": "ES5"
  },
  "include": ["src/**/*", "types/**/*", "tests/**/*", "yamlTools/**/*", "download/**/*"],
  "files": ["src/client.ts", "src/server.ts"]
}