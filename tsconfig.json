{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@yaml/*": ["./yamlTools/*"],
    },
    "esModuleInterop": true,
    "target": "ES5"
  },
  "include": ["src/**/*", "types", "tests/**/*", "yamlTools/**/*"],
  "files": ["src/client.ts", "src/server.ts"]
}